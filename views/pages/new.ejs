<%- include('../partials/header', { title: "New Message" }) %>
<main class="container py-5">
    <h1>New Message</h1>
    <form method="POST" action="/new" class="col-md-8">
        <div class="form-group mb-3">
            <label for="messageUser">Your name</label>
            <input
                type="text"
                class="form-control w-50"
                id="messageUser"
                name="messageUser"
            />
        </div>
        <div class="form-group mb-3">
            <label for="messageText">Your message</label>
            <textarea
                class="form-control"
                id="messageText"
                name="messageText"
                rows="5"
            ></textarea>
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</main>
<%- include('../partials/footer') %>
